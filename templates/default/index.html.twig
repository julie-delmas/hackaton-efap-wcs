{% extends 'base.html.twig' %}

{% block description %}{{ 'Simple starter page before connection'|trans|raw }}{% endblock %}

{% block title %}{{ 'Home'|trans|raw }}{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block header %}
{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <div class="row mb-5 mt-5">
                <div class="col">
                    <img class="img-thumbnail" src="{{ asset('build/assets/images/symfony-4-logo.png') }}" alt="Symfony logo">
                </div>
            </div>
            <div class="row mb-5 mt-5">
                <div class="col text-center">
                    <h1>{{ 'Starter kit with the following features'|trans|raw|upper }}</h1>
                </div>
            </div>
            <div class="row ul-subtitle-text">
                <div class="col">
                    <u>{{ 'On the project'|trans|raw }}</u> :
                    <ul>
                        <li>
                            <p>
                                {{ 'Webpack Encore'|trans|raw }} :
                                <br>
                                <i class="fab fa-github"></i>
                                <i class="fab fa-html5"></i>
                                <i class="fab fa-css3-alt"></i>
                                <i class="fab fa-js-square"></i>
                                <i class="fab fa-sass"></i>
                                <i class="fab fa-php"></i>
                            </p>
                        </li>
                        <li>{{ 'TimeContinuum'|trans|raw }}.</li>
                    </ul>

                    <u>{{ 'Usefull links'|trans|raw }}</u> :
                    <ul>
                        <li><a href="{{ path('show_time_continuum') }}">{{ 'Sample page using TimeContinuum'|trans|raw }}</a></li>
                    </ul>

                    <u>{{ 'User Auth without FOSUser'|trans|raw }}</u> :
                    <ul>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li><a href="{{ path('app_logout') }}">{{ 'Logout'|trans|raw }}</a></li>
                        {% else %}
                            <li><a href="{{ path('app_login') }}">{{ 'Login form'|trans|raw }}</a></li>
                        {% endif %}
                        <li><a href="{{ path('user_registration') }}">{{ 'Register form'|trans|raw }}</a></li>
                        <li><a href="{{ path('user_index') }}">{{ 'View user\'s profile'|trans|raw }}</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
{% endblock %}

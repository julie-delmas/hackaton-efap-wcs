{% extends 'base.html.twig' %}

{% block description %}{{ 'Simple starter page before connection'|trans|raw }}{% endblock %}

{% block title %}{{ 'My account'|trans|raw }}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('user') }}
{% endblock %}

{% block header %}
{% endblock %}

{% block body %}
    <section id="user-profile">
        <div class="container">
            <div class="row mb-5 mt-5">
                <div class="col">
                    <img class="img-thumbnail" src="{{ asset('build/assets/images/symfony-4-logo.png') }}" alt="Symfony logo">
                </div>
            </div>
            <div class="row mb-5 mt-5">
                <div class="col text-center">
                    <h1>Bienvenue</h1>
                </div>
            </div>
            <div class="row">
                <div class="col mb-5">
                    <div class="jumbotron">
                        <h2>Hello {{ user.firstName}}!</h2>
                        <ul>
                            <li><a href="{{ path('app_logout') }}">{{ 'Logout'|trans|raw }}</a></li>
                            <li><a href="{{ path('index') }}">{{ 'Back on homepage'|trans|raw }}</a></li>
                        </ul>
                        <div class="row">
                            <div class="col-4">
                                <img class="img-thumbnail" src="{{ asset('assets/images/Ours_blanc.jpg') }}">
                            </div>
                            <div class="col-8">
                                <h2><b>Ton pseudo : </b> {{ user.firstName }}</h2>
                                <h3><b>Ton grade : </b> {{ user.firstName }}</h3>

                                <h3><b>Ton score : </b></h3>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%;"
                                    aria-valuenow="25"
                                         aria-valuemin="0" aria-valuemax="100">{{ user.firstName }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('user') }}
{% endblock %}

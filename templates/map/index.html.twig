{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('/assets/css/map.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>Map</h1>
        <div class="row">
            <div class="col-10">
                <div class="map">
                    {% if map is empty %}
                        <div class="alert alert-warning">You are still on the firm ground, you have to loat fixtures first !</div>
                    {% endif %}
                    {% for y in 0..6 %}
                        <div class="row">
                            {% for x in 0..12 %}
                                {% if map[x][y] is defined %}
                                    <div class="tile col-1 {{ map[x][y].type }}">
                                        <div class="tile-name">{{ map[x][y].name ?? ' '}}</div>
                                        <div class="tile-name coords">{{ map[x][y].coordX }},{{ map[x][y].coordY }}</div>
                                        {% if boat.coordX == x and boat.coordY == y %}
                                            <img class="boat img-fluid" src="{{ asset('assets/images/boat.png') }}"
                                                 alt="boat"/>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-2">
                <div class="infos">
                    <h2>Information</h2>
                    {# Add here informations about current ship position #}
                    <p class="font-weight-bold text-center">{{ boat.coordX }} - {{ boat.coordY }} </p>
                </div>
                <div class="navigation">
                    <h2>Navigation</h2>
                    {# Add here N/S/E/W buttons #}
                    <a href="{{ path( 'moveDirection', { 'direction' : 'n' } ) }}"
                       class="btn btn-dark btn-block font-weight-bold" role="button">North</a>
                    <a href="{{ path( 'moveDirection', { 'direction' : 'e' } ) }}"
                       class="btn btn-dark btn-block font-weight-bold" role="button">East</a>
                    <a href="{{ path( 'moveDirection', { 'direction' : 's' } ) }}"
                       class="btn btn-dark btn-block font-weight-bold" role="button">South</a>
                    <a href="{{ path( 'moveDirection', { 'direction' : 'w' } ) }}"
                       class="btn btn-dark btn-block font-weight-bold" role="button">West</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('map') }}
{% endblock %}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/map.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>Map</h1>
        <div class="row">
            <div class="col-10">
                <div class="map">
                    {% if map is empty %}
                        <div class="alert alert-warning">You are still on the firm ground, you have to loat fixtures first !</div>
                    {% endif %}
                    {% for y in 0..6 %}
                        <div class="row">
                            {% for x in 0..12 %}
                                {% if map[x][y] is defined %}
                                    <div class="tile col-1 {{ map[x][y].type }}">
                                        <div class="tile-name">{{ map[x][y].name ?? ' '}}</div>
                                        <div class="tile-name coords">{{ map[x][y].coordX }},{{ map[x][y].coordY }}</div>
                                        {% if boat.coordX == x and boat.coordY == y %}
                                            <img class="boat img-fluid" src="{{ asset('assets/images/boat.png') }}"
                                                 alt="boat"/>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-2">
                <div class="infos">
                    <h2>Information</h2>
                    <p class="text-warning" style="font-weight: bold; font-size: 25px;">
                        {# Add here informations about current ship position #}
                        Your pos. : {{ boat.coordX }}, {{ boat.coordY }}
                        Type : {{ map[boat.coordX][boat.coordY].type }}
                    </p>
                </div>
                <div class="navigation">
                    <h2>Navigation</h2>
                    {# Add here N/S/E/W buttons #}
                    <ul style="list-style-type: none;">
                        <li><a href="{{ path('move_boat_to', {'direction' : 'N'}) }}" class="btn btn-outline-warning">North !</a></li>
                        <li><a href="{{ path('move_boat_to', {'direction' : 'E'}) }}" class="btn btn-outline-warning">East !</a></li>
                        <li><a href="{{ path('move_boat_to', {'direction' : 'S'}) }}" class="btn btn-outline-warning">South !</a></li>
                        <li><a href="{{ path('move_boat_to', {'direction' : 'W'}) }}" class="btn btn-outline-warning">West !</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
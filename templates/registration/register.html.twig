{% extends 'base.html.twig' %}

{% block title %}{{ 'Inscription'|trans|raw }}{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block header %}

{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mb-5 mt-5">
            <div class="col text-center">
                <h2>Inscription</h2>
            </div>
        </div>
        <div class="row mb-3 mt-3">
        </div>
        <div class="row text-center">
            <div class="col md-5">
                {{ form_start(form) }}
                <div class="row justify-content-center">
                    <div class="col-md-5">
                        <div class="form-group form-error">
                            {% set firstNamePlaceholder = 'Ton pseudo'|trans|raw %}
                            {% if form.firstName.vars.errors|length %}
                                {{ form_widget(form.firstName,
                                    form.firstName.vars|merge({'attr': {'autofocus': null, 'class': 'form-control', 'placeholder': firstNamePlaceholder} }) ) }}
                                {{ form_errors(form.firstName) }}
                            {% else %}
                                {{ form_widget(form.firstName, { 'attr': {'class': 'form-control', 'placeholder': firstNamePlaceholder} }) }}
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-5">
                        <div class="form-group form-error">
                            {% set emailPlaceholder = 'Ton adresse mail ou celle de tes parents'|trans|raw %}
                            {% if form.email.vars.errors|length %}
                                {{ form_widget(form.email,
                                    form.email.vars|merge({'type':'email', 'attr': {'autofocus': null, 'class': 'form-control', 'placeholder': emailPlaceholder} }) ) }}
                                {{ form_errors(form.email) }}
                            {% else %}
                                {{ form_widget(form.email, {'type':'email', 'attr': {'class': 'form-control', 'placeholder': emailPlaceholder} }) }}
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-5">
                        <div class="form-group form-error">
                            {% set passwordPlaceholder = 'Ton mot de passe doit comporter 8 caract√®res au minimum et un chiffre'|trans|raw %}
                            {% if form.plainPassword.first.vars.errors|length %}
                                {{ form_widget(form.plainPassword.first,
                                    form.plainPassword.first.vars|merge({'type':'password', 'attr': {'autofocus': null, 'class': 'form-control', 'placeholder': passwordPlaceholder} }) ) }}
                                {{ form_errors(form.plainPassword.first) }}
                            {% else %}
                                {{ form_widget(form.plainPassword.first, {'type':'password', 'attr': {'class': 'form-control', 'placeholder': passwordPlaceholder} }) }}
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-5">
                        <div class="form-group form-error">
                            {% set plainPasswordPlaceholder = 'Confirme ton mot de passe !'|trans|raw %}
                            {% if form.plainPassword.second.vars.errors|length %}
                                {{ form_widget(form.plainPassword.second,
                                    form.plainPassword.second.vars|merge({'type':'password', 'attr': {'autofocus': null, 'class': 'form-control', 'placeholder': plainPasswordPlaceholder } }) ) }}
                                {{ form_errors(form.plainPassword.second) }}
                            {% else %}
                                {{ form_widget(form.plainPassword.second, {'type':'password', 'attr': {'class': 'form-control', 'placeholder':  plainPasswordPlaceholder } }) }}
                            {% endif %}
                        </div>
                    </div>
                </div>
                    <button type="submit" class="btn btn-primary">C'est parti !</button>
                {{ form_end(form) }}
            </div>
        </div>
            <div class="row mb-5 mt-5 text-center">
                <div class="col-md">
                    <p><a href="{{ path('index') }}">Accueil</a></p>
                </div>
                <div class="col-md">
                    <p><a href="{{ path('app_login') }}">Se connecter</a></p>
                </div>
        </div>
    </div>
    </section>
{% endblock %}
{% block footer %}
{% endblock %}
{% block javascripts %}
{% endblock %}
